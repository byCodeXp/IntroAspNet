@model IntroAspNet.Models.Product

@{
    ViewData["Title"] = "Details";
}

<div class="d-flex justify-content-center align-items-center" style="position: fixed; left: 0; top: 0; width: 100%; height: 100%; z-index: -1;">
    <img src="@ENV.ImagePath@Model.Preview" alt="@Model.Name" style="max-height: 50%;">
</div>

<div style="position: fixed; left: 0; top: 50%; transform: translateY(-50%); width: 100%;">
    <div class="container">
        <ul>
            <li class="mb-2">Preview</li>
            <li>Description</li>
        </ul>
    </div>
</div>

<div style="position: fixed; bottom: 0; left: 0; width: 100%; background-color: #0a0a0a;">
    <div class="container d-flex justify-content-between align-items-center p-3">
        <h1>@Model.Name</h1>
        <div>
            <span class="me-3">$ @Model.Price</span>
            <a href="#" class="btn p-2">Add to cart</a>
        </div>
    </div>
</div>
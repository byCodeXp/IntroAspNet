@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div style="width: 256px; position: fixed; left: 50%; top: 50%; transform: translateX(-50%) translateY(-50%);">
    <h1>Login</h1>
    <section>
        <form id="account" method="post">
                <label class="textBox">
                    <span>Email</span>
                    <input asp-for="Input.Email" class="form-control"/>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </label>
                <label class="textBox">
                    <span>Password</span>
                    <input asp-for="Input.Password" class="form-control"/>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </label>
                <div class="checkbox mt-3">
                    <input type="checkbox" asp-for="Input.RememberMe">
                    <label class="text-light" asp-for="Input.RememberMe">Remember me ?</label>
                </div>
                <button type="submit" class="btn p-3 mt-3" style="width: 100%;">Log in</button>
            </form>
    </section>
    <section class="mt-3">
        <div class="d-flex justify-content-between">
            <a asp-page="./ForgotPassword">Forgot password?</a>
            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register</a>
        </div>
    </section>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
